<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% current_user.friends.each do |friend| %>
    <div class="group_member">
      <input type="checkbox" name="member[]" value="<%= friend.id %>" <% if @group.friends.include?(friend) %>checked<% end %> />
      <%= friend.first_name %> <%= friend.last_name %>
    </div>
  <% end %>

  <input type="hidden" />

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
